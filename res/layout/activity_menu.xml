    <Button
        android:id="@+id/buttonPeriod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/period" />

    <Button
        android:id="@+id/buttonCycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cycle" />

